<div class="row justify-content-center mt-3">
  <div class="col col-md-4">

    <h2><%= t('registration') %></h2>

    <div class="card border-primary">
      <div class="card-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <div class="field">
              <%= f.label :first_name, t('first_name') %><br />
              <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :last_name, t('last_name') %><br />
              <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :username, t('username') %><br />
              <%= f.text_field :username, autofocus: true, autocomplete: 'username', class: 'form-control' %>
            </div>

            <div class="field" >
              <%= f.label :email, t('email') %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
            </div>

            <div class="field input-pass">
              <%= f.label :password, t('password') %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: 'new-password' , class: 'form-control pass'%>
            </div>

            <div class="field input-conf-pass">
              <%= f.label :password_confirmation, t('password_confirmation') %><br />
              <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control conf-pass' %>
            </div>

            <div class="actions mt-3">
            <%= f.submit t('signup'), class: 'btn btn-primary' %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
