<tr>
  <td class="align-middle"><%= badge.title %></td>
  <td class="align-middle"><img class="img-fluid img-thumbnail" width="10%" src="<%= badge.icon_url %>"></td>
  <td class="align-middle"><%= link_to t('show'), admin_badge_path(badge), class: 'text-decoration-none' %></td>
  <td class="align-middle">
    <%= link_to t('edit'), edit_admin_badge_path(badge), class: 'text-decoration-none' %>
  </td>
  <td class="align-middle">
    <%= link_to t('delete'),
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: 'Are you sure?' },
                class: 'text-decoration-none'%>
  </td>
</tr>
